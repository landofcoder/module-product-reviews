<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">hgati_product_reviews_reminders_listing.hgati_product_reviews_reminders_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/sendReminder"/>
                <class>primary</class>
                <label translate="true">Reminders To All</label>
            </button>
        </buttons>
        <spinner>hgati_product_reviews_reminders_columns</spinner>
        <deps>
            <dep>hgati_product_reviews_reminders_listing.hgati_product_reviews_reminders_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="hgati_product_reviews_reminders_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Hgati_ProductReviews::hgati_product_reviews_reminders</aclResource>
        <dataProvider class="Hgati\ProductReviews\Ui\DataProvider\Reminders\RemindersDataProvider" name="hgati_product_reviews_reminders_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions" class="\Hgati\ProductReviews\Ui\Component\Reminders\MassAction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="selectProvider" xsi:type="string">hgati_product_reviews_reminders_listing.hgati_product_reviews_reminders_listing.hgati_product_reviews_reminders_columns.ids</item>
                    <item name="indexField" xsi:type="string">id</item>
                </item>
            </argument>
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="hgati_product_reviews/reminders/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="status">
                <settings>
                    <type>status</type>
                    <label translate="true">Change status</label>
                    <actions>
                        <action name="0">
                            <type>pending</type>
                            <label translate="true">Pending</label>
                            <url path="hgati_product_reviews/reminders/massStatus">
                                <param name="status">1</param>
                            </url>
                        </action>
                        <action name="1">
                            <type>onhold</type>
                            <label translate="true">On Hold</label>
                            <url path="hgati_product_reviews/reminders/massStatus">
                                <param name="status">2</param>
                            </url>
                        </action>
                    </actions>
                </settings>
            </action>
            <action name="sent">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to send email to selected items?</message>
                        <title translate="true">Send Reminders</title>
                    </confirm>
                    <url path="hgati_product_reviews/reminders/sendReminder"/>
                    <type>send</type>
                    <label translate="true">Send Email</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns  name="hgati_product_reviews_reminders_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">hgati_product_reviews_reminders_listing.hgati_product_reviews_reminders_listing.hgati_product_reviews_reminders_columns.actions</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">edit</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>id</indexField>
            </settings>
        </selectionsColumn>
        <column name="id" sortOrder="10">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="20">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Hgati\ProductReviews\Ui\Component\Listing\Columns\ReminderOrderViewActions" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="viewUrlPath" xsi:type="string">sales/order/view</item>
                    <item name="urlEntityParamName" xsi:type="string">order_id</item>
                </item>
            </argument>
            <settings>
                <indexField>order_id</indexField>
                <label translate="true">Order</label>
            </settings>
        </actionsColumn>
        <column name="order_increment_id" sortOrder="42">
            <settings>
                <sortable>false</sortable>
                <label translate="true">Order Increment Id</label>
            </settings>
        </column>
        <column name="order_status" sortOrder="45">
            <settings>
                <sortable>false</sortable>
                <label translate="true">Order Status</label>
            </settings>
        </column>
        <column name="name" sortOrder="40">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer Name</label>
            </settings>
        </column>
        <column name="email" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer Email</label>
            </settings>
        </column>
        <column name="product_id" sortOrder="52">
            <settings>
                <filter>text</filter>
                <label translate="true">Product ID</label>
            </settings>
        </column>
        <column name="product_name" class="Hgati\ProductReviews\Ui\Component\Listing\Columns\ProductName" sortOrder="55">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Hgati_ProductReviews/js/grid/columns/customlink</item>
                    <item name="indexField" xsi:type="string">product_id</item>
                    <item name="label" xsi:type="string" translate="true">Product Name</item>
                    <item name="resizeEnabled" xsi:type="boolean">true</item>
                    <item name="resizeDefaultWidth" xsi:type="string">107</item>
                </item>
            </argument>
        </column>
        <column name="status" component="Magento_Ui/js/grid/columns/select" sortOrder="60">
            <settings>
                <options class="Hgati\ProductReviews\Model\Reminders\Source\Status"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="store_id" class="Magento\Store\Ui\Component\Listing\Column\Store" sortOrder="70">
            <settings>
                <label translate="true">Store View</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <sortable>false</sortable>
            </settings>
        </column>
    </columns>
</listing>

