			<resource ref="Hgati_ProductReviews::gallery_delete"/>
		</resources>
	</route>

    <route method="GET" url="/V1/reviews/gallery/:galleryId">
        <service class="Hgati\ProductReviews\Api\GalleryRepositoryInterface" method="getById"/>
