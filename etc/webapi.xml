<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <!-- Customer API -->

    <route url="/V1/reviews/me" method="GET">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="getMyList"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/reviews/me/:reviewId" method="GET">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="getMyReview"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/reviews/me/reply" method="POST">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="replyByCustomer"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/products/:sku/reviews" method="POST">
        <service class="Hgati\ProductReviews\Api\PostProductReviewsInterface" method="execute"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/reviews/me/:reviewId/like" method="POST">
        <service class="Hgati\ProductReviews\Api\LikeRepositoryInterface" method="execute"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/reviews/me/:reviewId/unlike" method="POST">
        <service class="Hgati\ProductReviews\Api\UnLikeRepositoryInterface" method="execute"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/reviews/me/:reviewId/report" method="POST">
        <service class="Hgati\ProductReviews\Api\ReportRepositoryInterface" method="execute"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <route url="/V1/reviews/me/verify" method="POST">
        <service class="Hgati\ProductReviews\Api\VerifyRepositoryInterface" method="execute"/>
        <resources>
            <resource ref="self"/>
        </resources>
        <data>
            <parameter name="customerId" force="true">%customer_id%</parameter>
        </data>
    </route>

    <!-- Guest API -->

    <route url="/V1/products/:sku/reviews" method="GET">
        <service class="Hgati\ProductReviews\Api\GetProductReviewsInterface" method="execute"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/reviews/guest/reply" method="POST">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="replyByGuest"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route url="/V1/reviews/ratings/:storeId" method="GET">
        <service class="Hgati\ProductReviews\Api\RatingRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <!-- Admin API -->

    <route url="/V1/reviews" method="GET">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Hgati_ProductReviews::reviews"/>
        </resources>
    </route>

    <route url="/V1/reviews/reply" method="POST">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="reply"/>
        <resources>
            <resource ref="Hgati_ProductReviews::save_reply"/>
        </resources>
    </route>

    <route url="/V1/reviews/gallery" method="POST">
		<service class="Hgati\ProductReviews\Api\GalleryRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Hgati_ProductReviews::gallery_save"/>
		</resources>
	</route>

    <route url="/V1/reviews/gallery/:galleryId" method="PUT">
		<service class="Hgati\ProductReviews\Api\GalleryRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Hgati_ProductReviews::gallery_save"/>
		</resources>
	</route>

