            <resource ref="Hgati_ProductReviews::gallery_view"/>
        </resources>
    </route>

    <route url="/V1/reviews/:reviewId" method="GET">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="get"/>
        <resources>
            <resource ref="Hgati_ProductReviews::reviews"/>
        </resources>
    </route>
    <route url="/V1/reviews/reply/:reviewId" method="GET">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="getListReply"/>
        <resources>
            <resource ref="Hgati_ProductReviews::reviews"/>
        </resources>
    </route>
    <route url="/V1/reviews/:id" method="PUT">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Magento_Review::reviews_all"/>
        </resources>
    </route>

    <route url="/V1/reviews" method="POST">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Hgati_ProductReviews::reviews"/>
        </resources>
    </route>
    <route url="/V1/reviews/:reviewId" method="DELETE">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="Magento_Review::reviews_all"/>
        </resources>
    </route>
    <route url="/V1/reviews/reply/:replyId" method="DELETE">
        <service class="Hgati\ProductReviews\Api\ReviewRepositoryInterface" method="deleteReplyById"/>
        <resources>
            <resource ref="Hgati_ProductReviews::delete_reply"/>
        </resources>
    </route>

    <route url="/V1/reviews/customize" method="POST">
		<service class="Hgati\ProductReviews\Api\CustomizeRepositoryInterface" method="save"/>
		<resources>
			<resource ref="Hgati_ProductReviews::customize_save"/>
		</resources>
	</route>
